<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_dialog_file_header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imagebutton_dialog_file_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="0"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:src="@drawable/back_button" />

        <EditText
            android:id="@+id/edittext_dialog_file_path"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:singleLine="true" />

        <CheckBox
            android:id="@+id/checkbox_dialog_file_all"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="0" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview_dialog_file"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </ListView>
    <!-- ListView的高度必须是确定的，否则在变化的时候 -->

    <LinearLayout
        android:id="@+id/layout_dialog_file_footer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_dialog_file_cancel"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/button_dialog_file_ok"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/ok" />
    </LinearLayout>

</LinearLayout>